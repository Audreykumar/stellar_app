
<div class="container-fluid">
      <div class="row">        
        <div class="col-lg-12">   	
          <h1 class="page-header">Profile</h1>
			<% include ../../partials/flash %>
        </div>
    </div>
          <div class="row">
            <div class="col-md-12">
            <form method="post" name="profile" action="/dashboard/profile/update">
            <div class="form-group">
              <label>Name</label>
              <input class="form-control" type="text" name="name" value="<%= user.name %>">
            </div>
            <div class="form-group">
              <label>Email</label>
              <input class="form-control" type="email" name="email" value="<%= user.email %>" disabled>
            </div>
            <div class="well">
              <p>List of all stellar accounts</p>
            <% accounts.forEach(function(account,index){ %>
              <label><input <% if ( default_account.length && default_account[0].id == account.id) {%> checked='checked' <% } %> type="radio" name="default_account" value="<%= account.id %>"> <%=account.public_key%></label>
            <% }) %>
            <p class="text-danger" style="margin-bottom: 0px;"> Note* please select one default account for recieving payments.</p>
          </div>
          <div class="form-group">              
              <input class="btn btn-default" type="submit" name="submit" value="Update">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </div>
            </form>
            </div>            
          </div>          
        </div>
